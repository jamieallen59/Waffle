<h1 id="header-2">Enter your details to begin waffling... </h1>

	<div id="form-main">
  <div id="form-div">
    <form action="/users" method="post" class="form" id="form1">
      <p class="name">
        <input name="name" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Name" id="name" />
      </p>
      
      <p class="email">
        <input name="email" type="email" value="<%= @user.email %>" class="validate[required,custom[email]] feedback-input" id="email" placeholder="Email" />
      </p>

      <p class="username">
        <input name="username" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Username" id="username" />
      </p>

      <p class="password">
        <input name="password" type="password" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Password" id="password" />
      </p>

      <p class="password_confirmation">
        <input name="password_confirmation" type="password" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Password confirmation" id="password_confirmation" />
      </p>
      
      <div class="submit">
        <button type="submit" id="button-orange">Register</button>
        <div class="ease"></div>
      </div>
    </form>
  </div>